{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}

<section class="article"> 
{% for article in articles %}
<article> 
<h2> {{article.title}}</h2> 
<div class="metadata" > {{article.createdAt | date('d/m/Y')}} a  {{article.createdAt | date('H:m')}} Dans la categorie politique </div> 
<div class="content"> 
<img src="{{article.image}}" alt=" " > 

{{article.content | raw }} 

<a href="{{ path('blog_show') }}" class="btn btn-primary"> Lire la suite .. </a> 
</div> 
</article>
{%endfor %}


</section> 
{% endblock %}
